@model List<UskudarDenetim.UI.Models.ModelActivityArea>
@{

    int count = 0;
    string margin30 = "  <div class='dt-sc-margin30'></div>";
    string First = "first";
}
<div class="full-width-section">
    <div class="dt-sc-margin50"></div>
    <div class="container">
        <h2 class="aligncenter">Faaliyet Alanlarımız</h2>
        @*<p class="middle-align">Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical<br /> Latin literature from 45 BC, making it over 2000 years old. </p>*@
        <div class="dt-sc-hr-invisible-small"></div>
        @foreach (var activityArea in Model)
        {
            <div class="column dt-sc-one-third @if (count % 3 == 0)
                {
		 <text>@First</text>
                }   ">
                <div class="dt-sc-ico-content type7">
                    <div class="icon animate" data-animation="fadeInRight" data-delay="100">
                        <span class="fa fa-edit"></span>
                    </div>
                    <h4> <a> @activityArea.Name </a> </h4>
                    <p>@activityArea.Description</p>
                </div>
            </div>
            if (count % 3 == 0 && count != 0)
            { <text>@margin30</text>}

            count++;
    }
    </div>
    <div class="dt-sc-margin50"></div>
</div>
