@model UskudarDenetim.UI.Models.ModelAppointmentRequest
@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="full-width-section parallax full-section-bg">
    <div class="container">
        <div class="dt-sc-clear"></div>
        <div class="form-wrapper register">
            @using (Ajax.BeginForm("CreateAppointment", "Home", new AjaxOptions()
            {
                HttpMethod = "Post",
                OnSuccess = "OnSuccessCreateAppointment",
                OnFailure = "OnFailureCreateAppointment"
            }))
            {
                <h4>Görüşme Talep Formu</h4>
                <p class="dt-sc-one-half column first">
                    @Html.TextBoxFor(x => x.FullName, new { @placeholder = "Adınız/Soyadınız*", @required = "required" })
                </p>
                <p class="dt-sc-one-half column ">
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @placeholder = "Telefon Numaranız", @required = "required", @data_inputmask = "'mask':'(0999)-999-99-99'" })
                </p>
                <p class="dt-sc-one-half column first">
                    @Html.TextBoxFor(x => x.CompanyName, new { @placeholder = "Firma Adı", @required = "required" })
                </p>
                <p class="dt-sc-one-half column ">
                    @Html.TextBoxFor(x => x.Email, new { @placeholder = " E-Posta Adresi", @required = "required" })
                </p>
              
                <p class="dt-sc-one-half column first">
                    @Html.TextBoxFor(x => x.AppointmentDate, new { @placeholder = "Randevu Tarihi", @required = "required" ,type="date"})
                </p>
                <p class="dt-sc-one-half column ">
                    @Html.TextBoxFor(x => x.PreferPlace, new { @placeholder = "Tercih Ettiğiniz Görüşme Yeri", @required = "required" })
                </p>
                <p class="dt-sc-full-width column first">
                    @Html.TextAreaFor(x => x.Description, new { @placeholder = "Not/Mesaj", @required = "required" })
                </p>
                <div class="dt-sc-margin30"></div>
                <input class="button bg-button-color-success " value="Kaydet" type="submit">
            }
        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript">

        function OnSuccessCreateAppointment(response) {
            if (response.success) {
                openShowSuccessModal(response.message);
            } else {
                openShowErrorModal(response.message);
            }
        }
        function OnFailureCreateAppointment(response) {
            debugger;
        }



    </script>
}
